<?xml version="1.0"?>
<robot name="apple" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- 定义苹果的材质：柔性（rubber） -->
  <material name="rubber">
    <color rgba="1.0 0.8 0.6 1"/>  <!-- 浅橙色/红色示例，模拟苹果 -->
  </material>

  <!-- 苹果的 link：apple_link -->
  <link name="apple_link">
    <!-- 视觉 -->
    <visual>
      <geometry>
        <sphere radius="0.04"/>  <!-- 直径0.08m → 半径0.04m -->
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="rubber"/>
    </visual>

    <!-- 碰撞 -->
    <collision>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>

    <!-- 惯性 -->
    <inertial>
      <mass value="0.1"/>  <!-- 苹果质量示例：0.1kg -->
      <inertia ixx="1e-5" ixy="0" ixz="0" 
               iyy="1e-5" iyz="0" 
               izz="1e-5"/>  <!-- 球体惯性：I = (2/5)*m*r² ，这里简化为很小的对角值 -->
    </inertial>
  </link>

  <!-- 把苹果挂到世界（固定关节，也可以后续在 scene.xml 里用 <body pos=…> 定位） -->
  <joint name="world_to_apple" type="fixed">
    <parent link="world"/>
    <child link="apple_link"/>
    <origin xyz="0.5 0 0.75" rpy="0 0 0"/>  <!-- 暂时放在桌子正上方，x=0.5, y=0, z=桌子高度(0.7)+苹果半径(0.04)≈0.75 -->
  </joint>
</robot>
